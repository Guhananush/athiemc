 -- STORE PROCEDURE 
 
 create procedure large_salaries()
 select *
 from employee_salary
 where salary >= 50000;
 
 call large_salaries();
 ---
  create procedure large_salaries_2()
 select *
 from employee_salary
 where salary >= 50000;
 select *
 from employee_salary
 where salary >= 10000;
 
 call large_salaries_2();
 
# Delimiter = special ending symbol for a SQL command.

# We change it when writing stored procedures so MySQL doesnâ€™t get confused by semicolons inside the procedure.

delimiter $$ 
create procedure large_salaries_3()
begin
 select *
 from employee_salary
 where salary >= 50000;
 select *
 from employee_salary
 where salary >= 10000;
end $$
delimiter ;
 
 call large_salaries_3();
 
 --
 
delimiter $$ 
create procedure large_salaries_4(anush int)
begin
 select salary
 from employee_salary
 where  employee_id = anush ; # here anush is parameter ...
end $$
delimiter ;

call large_salaries_4(1);